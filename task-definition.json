{
  "family": "playlist-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID_PLACEHOLDER:role/PlaylistAppExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID_PLACEHOLDER:role/PlaylistAppTaskRole",
  "containerDefinitions": [
    {
      "name": "playlist-app",
      "dependsOn": [
        {
          "containerName": "playlist-redis",
          "condition": "HEALTHY"
        }
      ],
      "image": "dummy",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp",
          "appProtocol": "http"
        }
      ],
      "environment": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/playlist-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "playlist-redis",
      "image": "redis:7.2",
      "essential": true,
      "command": ["sh", "-c", "redis-server --requirepass \\$REDIS_PASSWORD"],
      "portMappings": [
        {
          "containerPort": 6379,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "REDIS_PASSWORD",
          "value": "REDIS_PASSWORD_PLACEHOLDER"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/playlist-task",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "redis-cli -a \"$REDIS_PASSWORD\" ping"],
        "interval": 5,
        "timeout": 3,
        "retries": 5,
        "startPeriod": 10
      }
    }
  ]
}
